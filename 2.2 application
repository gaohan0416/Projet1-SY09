#Iris

data(iris)
X <- iris[,1:4]
z <- iris[,5]

#k=2
c1 <- kmeans(iris[,1:4],2)
plot(iris[,1:4], col=c1$cluster)
clusplot(iris[,1:4],c1$cluster, color = TRUE, shade = TRUE, labels = 2, main = "Clusplot Classification avec 2 classes")

#k=3
c2 <- kmeans(iris[,1:4],3)
plot(iris[,1:4], col=c2$cluster)
clusplot(iris[,1:4],c1$cluster, color = TRUE, shade = TRUE, labels = 2, main = "Clusplot Classification avec 3 classes")

#k=4
c3 <- kmeans(iris[,1:4],4)
plot(iris[,1:4], col=c3$cluster)

#k=5
c4 <- kmeans(iris[,1:4],5)
plot(iris[,1:4], col=c4$cluster)

#k=2
d2 <- dist(iris)
r2 <- cmdscale(d2, k=2)
h <- hclust(d2)
plot(h)

#k=3
d3 <- dist(iris)
r3 <- cmdscale(d3, k=3)
h <- hclust(d3)
plot(h)

